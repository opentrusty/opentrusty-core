# OpenTrusty Shared Infrastructure Environment
# All services (auth, admin, cli) MUST use identical values for these.

OPENTRUSTY_ENV=dev
OPENTRUSTY_DATABASE_URL=postgres://opentrusty:password@localhost:5432/opentrusty?sslmode=disable
OPENTRUSTY_SESSION_SECRET=REPLACE_WITH_SECURE_64_BYTE_HEX
OPENTRUSTY_IDENTITY_SECRET=REPLACE_WITH_SECURE_32_BYTE_HEX
OPENTRUSTY_LOG_LEVEL=info
OPENTRUSTY_BASE_URL=http://localhost

# Cookie Policies (Shared defaults)
OPENTRUSTY_COOKIE_SECURE=false
OPENTRUSTY_COOKIE_HTTPONLY=true
OPENTRUSTY_COOKIE_SAMESITE=Lax
OPENTRUSTY_COOKIE_DOMAIN=
